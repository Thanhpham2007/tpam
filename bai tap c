#include <stdio.h>

// Xuất menu công việc
void xuatMenu() {
    printf("1. Giai phuong trinh bac 1\n");
    printf("2. Kiem tra so hoan thien\n");
    printf("3. Liet ke so hoan thien tu 1 den n\n");
    printf("4. Tim UCLN cua hai so\n");
    printf("0. Thoat\n");
}

// a. Giai PT bac 1
void giaiPTB1(float a, float b) {
    if (a == 0)
        printf("Phuong trinh vo nghiem hoac vo so nghiem\n");
    else
        printf("x = %.2f\n", -b / a);
}

// b. Kiem tra so hoan thien
int laSoHoanThien(int n) {
    int i, tong = 0;
    for (i = 1; i <= n / 2; i++)
        if (n % i == 0)
            tong += i;
    return tong == n;
}

// c. Liet ke so hoan thien
void lietKeSoHoanThien(int n) {
    int i;
    for (i = 1; i <= n; i++)
        if (laSoHoanThien(i))
            printf("%d ", i);
    printf("\n");
}

// d. Tim UCLN
int UCLN(int a, int b) {
    while (b != 0) {
        int r = a % b;
        a = b;
        b = r;
    }
    return a;
}

int main() {
    int chon;

    do {
        xuatMenu();
        printf("Hay chon cong viec: ");
        scanf("%d", &chon);

        switch (chon) {
            case 1: {
                float a, b;
                scanf("%f%f", &a, &b);
                giaiPTB1(a, b);
                break;
            }
            case 2: {
                int n;
                scanf("%d", &n);
                if (laSoHoanThien(n))
                    printf("La so hoan thien\n");
                else
                    printf("Khong la so hoan thien\n");
                break;
            }
            case 3: {
                int n;
                scanf("%d", &n);
                lietKeSoHoanThien(n);
                break;
            }
            case 4: {
                int a, b;
                scanf("%d%d", &a, &b);
                printf("UCLN = %d\n", UCLN(a, b));
                break;
            }
            default:
                chon = 0;
        }
    } while (chon != 0);

    return 0;
}